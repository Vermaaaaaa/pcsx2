{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "clang-base",
            "displayName": "Base",
            "description": "Base preset for Clang. Only for inheriting from.",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
          "cacheVariables": {
            "CMAKE_EXE_LINKER_FLAGS_INIT": "-fuse-ld=lld",
            "CMAKE_MODULE_LINKER_FLAGS_INIT": "-fuse-ld=lld",
            "CMAKE_SHARED_LINKER_FLAGS_INIT": "-fuse-ld=lld",
            "CMAKE_C_COMPILER": "clang-cl",
            "CMAKE_CXX_COMPILER": "clang-cl",
            "CMAKE_INCLUDE_PATH": {
              "type": "PATH",
              "value": "D:/PCSX2 Dev/pcsx2/deps;D:/PCSX2 Dev/pcsx2/deps/include"
            },
            "CMAKE_LIBRARY_PATH": {
              "type": "PATH",
              "value": "D:/PCSX2 Dev/pcsx2/deps;D:/PCSX2 Dev/pcsx2/deps/lib"
            },
            "CMAKE_PREFIX_PATH": {
              "type": "PATH",
              "value": "D:/PCSX2 Dev/pcsx2/deps"
            },
            "SDL3_DIR": {
              "type": "PATH",
              "value": "D:/PCSX2 Dev/pcsx2/deps/cmake"
            },
            "CMAKE_INSTALL_PREFIX": {
              "type": "PATH",
              "value": "D:/PCSX2 Dev/pcsx2/bin"
            }
          }
        },
        {
            "name": "ninja-multi",
            "displayName": "Ninja Multi Config",
            "description": "Generate multiple ninja build files.",
            "inherits": "clang-base",
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "clang-debug",
            "displayName": "Clang Debug",
            "description": "Debug build using ninja and clang.",
            "inherits": "clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-devel",
            "displayName": "Clang Devel",
            "description": "Developer build using ninja & clang.",
            "inherits": "clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Devel"
            }
        },
        {
            "name": "clang-release",
            "displayName": "Clang Release",
            "description": "Release lto build using ninja & clang.",
            "inherits": "clang-base",
            "cacheVariables": {
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
